pipeline {
    agent any

    stages {
        stage('Cloning GitHub Repo to Jenkins') {
            steps {
                echo 'Cloning GitHub repo to Jenkins...'
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/Nabarundutta/hotel_booking_forecast.git',
                        credentialsId: 'github-token'
                    ]]
                ])
            }
        }
    }
}
